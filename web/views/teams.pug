extends templates/layout
include mixins/pcttd
block content
    table.chances#teams-table
        tr
            td.head(colspan=2)
                button(onclick='sortTeamNames()')= 'Team'
            td.head(colspan=2)
                button(onclick='sortDivisions()')= 'Division'
            td.head
                button(onclick='sortElos()')= 'Elo'
            td.head
                button(onclick='sortRecords()')= 'Record'
            td.head
                button(onclick='sortTable(6)')= 'Playoffs'
            td.head
                button(onclick='sortTable(7)')= 'Division Leader'
            td.head
                button(onclick='sortTable(8)')= 'Conference Leader'
            td.head
                button(onclick='sortTable(9)')= 'Make Division Rnd'
            td.head
                button(onclick='sortTable(10)')= 'Division Rnd Winner'
            td.head
                button(onclick='sortTable(11)')= 'Conference Rnd Winner'
            td.head
                button(onclick='sortTable(12)')= 'Super Bowl Winner'
        each team in teams
            tr
                td.team(style='background-color:' + team.color1)
                    img(src='../img/' + team.abbreviation.toLowerCase() + '.svg')
                td.team(style='background-color:' + team.color1)
                    a(href='/teams/' + team.id)= team.name
                td.team(style='background-color:' + team.color1)
                    img(src='../img/' + (team.division.conferenceId == 7 ? 'nfc' : 'afc') + '.svg')
                td.team(style='background-color:' + team.color1)= team.division.name.substring(4, 9)
                td.rec= Math.round(team.elo)
                td.rec= team.record
                +pcttd(Number(team.seed7Chance))
                +pcttd(Number(team.seed4Chance))
                +pcttd(Number(team.seed1Chance))
                +pcttd(Number(team.makeDivChance))
                +pcttd(Number(team.makeConfChance))
                +pcttd(Number(team.makeSbChance))
                +pcttd(Number(team.winSbChance))
